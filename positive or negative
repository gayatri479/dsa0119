#include <iostream>
using namespace std;

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    if (num > 0)
        cout << num << " is positive.\n";
    else if (num < 0)
        cout << num << " is negative.\n";
    else
        cout << "The number is zero.\n";

    return 0;
}
