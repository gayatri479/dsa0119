#include <iostream>
#include <cmath>   // for pow()
#include <string>  // for to_string()

using namespace std;

int main() {
    int number;
    cout << "Enter an integer: ";
    cin >> number;

    string numStr = to_string(number);
    int power = numStr.length();

    int temp = number;
    int total = 0;

    while (temp > 0) {
        int digit = temp % 10;
        total += pow(digit, power);
        temp /= 10;
    }

    if (total == number) {
        cout << number << " is a narcissistic number." << endl;
    } else {
        cout << number << " is NOT a narcissistic number." << endl;
    }

    return 0;
}
