#include <iostream>
using namespace std;

bool isBuzz(int n) {
    // Check if divisible by 7 or ends with 7
    return (n % 7 == 0) || (n % 10 == 7);
}

int main() {
    int num;
    cout << "Enter an integer: ";
    cin >> num;

    if (isBuzz(num)) {
        cout << num << " is a Buzz number." << endl;
    } else {
        cout << num << " is not a Buzz number." << endl;
    }

    return 0;
}
