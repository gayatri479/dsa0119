#include<iostream>
using namespace std;
int main()
{
  const int n=3;
  int a[n][n]={
    {1,2,3},
    {2,4,7},
    {9,5,7}
};
 int primary_diagonal=0,secondary_diagonal=0;
for(int i=0;i<n;i++){
  primary_diagonal+=a[i][i];
  secondary_diagonal+=a[i][n-i-1];
}
  cout<<"primary diagonal sum:"<<primary_diagonal<<endl;
  cout<<"secondary diagonal sum:"<<secondary_diagonal<<endl;
}
primary diagonal sum:12
secondary diagonal sum:16



